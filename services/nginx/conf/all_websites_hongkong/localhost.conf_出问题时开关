server {
    listen       80;
    server_name  localhost;
    rewrite_log on;
    access_log /888/server_hongkong/dnmp_for_hongkong/logs/nginx1.15.7/000_localhost_access.log;
    error_log /888/server_hongkong/dnmp_for_hongkong/logs/nginx1.15.7/000_localhost_error.log  notice;# 上线后改为error
    root   /www-test/localhost;
    #location / {
        
     #   index  index.html index.htm index.php;
    #}  
    location /echo {
        default_type text/plain;
        echo 'test echo';
    }


    location ~ \.php$ {

        fastcgi_pass   _php;
        include        fastcgi-php.conf;
        include        fastcgi_params;
    }

    # 参考 https://github.com/wandenberg/nginx-video-thumbextractor-module
    # http://localhost/videothumb/video/a.mp4 文件名为1.mp4时出错，为其它名字正常，不明白
    # http://localhost/videothumb/video/a.mp4?second=5
    # http://localhost/thumbs/video.mp4?second=20&height=50&width=100

    # 图片放在 E:\888\server_hongkong\dnmp_for_hongkong\888-test\localhost\video\1.mp4
    location ~ /videothumb/(.*) {
        # 末尾必须带 /
        #alias   /888-test/localhost/$1;
        alias   /888-test/localhost/;
        video_thumbextractor;
        video_thumbextractor_video_filename    $1;
        video_thumbextractor_video_second      $arg_second;
        video_thumbextractor_image_width       $arg_width;
        video_thumbextractor_image_height      $arg_height;
        #video_thumbextractor_tile_rows 2;
        #video_thumbextractor_tile_cols 4;
    }
}